<%- include('../includes/forumhead.ejs') %>
    <div style="font-size: 50px; left: 52%; margin-top: 20px; position: absolute; color: #099;">Our Location</div>
    <div class="container-fluid">
        <main class="tm-main">
            <div class="row tm-row tm-mb-45">
                <div class="col-12">
                    <hr class="tm-hr-primary tm-mb-55">
                    <div class="gmap_canvas">
                        <!-- Google Maps -->
                        <iframe width="100%" height="450" id="gmap_canvas"
                            src="https://maps.google.com/maps?width=600&amp;height=400&amp;hl=en&amp;q=דרך מנחם בגין 53 תל אביב&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"
                            frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                    </div>
                </div>
            </div>
            <div class="row tm-row tm-mb-120">
                <div class="col-12">
                    <h2 class="tm-color-primary tm-post-title tm-mb-60" style="text-align: center; font-size: 45px;">
                        ----------------------------------- Our Staff -----------------------------------</h2>
                    <h3 class="tm-color-primary tm-post-title tm-mb-40" style="text-align: center; font-size: 35px;">Our
                        Admin</h3>
                    <h3 class="tm-color-primary tm-post-title tm-mb-40"
                        style="text-align: center; font-size: 25px; color: red;">Nicroo</h3>
                    <h4 class="tm-color-primary tm-post-title tm-mb-40" style="text-align: center; font-size: 35px;">Our
                        Moderators</h4>
                    <div class="modwrapper">
                        <% if (moderators.length <=0) { %>
                            <h3 class="tm-color-primary tm-post-title tm-mb-40"
                                style="text-align: center; font-size: 25px; color: red;">No Moderators Yet!</h3>
                            <% } else { %>
                                <% for(let i=0; i<moderators.length; i++) { %>
                                    <h3 class="tm-color-primary tm-post-title tm-mb-40"
                                        style="text-align: center; font-size: 25px; color: red;">
                                        <%= moderators[i].username%>
                                    </h3>
                                    <% } %>
                                        <% } %>
                    </div>
                </div>
                <div class="col-12">
                    <h2 class="tm-color-primary tm-post-title tm-mb-60" style="text-align: center; font-size: 35px;">
                        Become a Moderator</h2>
                </div>
                <div class="col-lg-7 tm-contact-left">
                    <% if(isAuthenticated && req.user.role==="User" && pending) { %>
                        <label for="name"
                            style="font-size: 40px; margin-top: 100px; position: absolute; color: #099; line-height: 38pt;">Hey!
                            You have a <br> pending application!</label>
                        <% } else if (isAuthenticated && req.user.role==="User" ) { %>
                            <form method="POST" action="/staff" class="mb-5 ml-auto mr-0 tm-contact-form">
                                <div class="form-group row mb-4">
                                    <label style="font-size: 30px; color: #099; position: absolute; left:15%;">Why
                                        should we hire you?</label>
                                </div>
                                <div class="form-group row mb-5">
                                    <div class="col-sm-9" style="position: relative; right: 17%; top: 40px;">
                                        <textarea class="form-control"
                                            style="min-height:150px; max-height: 350px; min-width: 150px;"
                                            name="application" id="application" rows="8" minlength="20"
                                            required></textarea>
                                    </div>
                                </div>
                                <div class="form-group row text-right"
                                    style="position: relative; right: 95%; top: 30px;">
                                    <div class="col-12">
                                        <button class="tm-btn tm-btn-primary tm-btn-small" type="submit">Apply</button>
                                    </div>
                                </div>
                            </form>
                            <% } else if (!isAuthenticated) { %>
                                <label for="name"
                                    style="font-size: 40px; margin-top: 100px; position: absolute; color: #099; line-height: 38pt;">Must
                                    be logged in order to apply <br> for a moderator role!</label>
                                <div class="col-12">
                                    <button class="tm-btn tm-btn-primary tm-btn-small"
                                        style="position: absolute; left: 25%; margin-top: 250px;"
                                        onclick="window.location.href='/login'">Go to Login Page</button>
                                </div>
                                <% } else { %>
                                    <label for="name"
                                        style="font-size: 40px; margin-top: 100px; position: absolute; color: #099; line-height: 38pt;">Hey!
                                        You are already a <br> part of the Fashlytical Team!</label>
                                    <% } %>
                </div>
                <div class="col-lg-5 tm-contact-right">
                    <address class="mb-4 tm-color-gray">
                        In Fashlytical we value the freedom of information and speech!
                    </address>
                    <span class="mb-4 d-block">
                        Email For Making Contact: <br>
                        <a class="tm-color-gray">fashlyticalhelp@gmail.com</a>
                    </span>
                    <p class="mb-5 tm-line-height-short">
                        The Fashlytical forums are made solely for the purpose of helping everyone to find the best and
                        most beautiful shoes and get fast feedback.
                    </p>
                </div>
            </div>
            <div class="row tm-row tm-mb-20">
                <div class="col-12">
                    <hr class="tm-hr-primary tm-mb-40">
                </div>
            </div>
            <%- include('../includes/forumfooter.ejs') %>
        </main>
    </div>
    <script src="js/jquery.min.js"></script>
    <script src="js/forum-script.js"></script>
    </body>

    </html>