<%- include('../includes/head.ejs') %>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/login.css">
    <!--===============================================================================================-->
    </head>

    <body class="main-layout">
        <!-- header section start -->
        <div class="header_section">
             <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-top: -40px; margin-left: -100px;">
                            <a href="/"><img src="/images/shop/logo.png" class="logopng"></a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" style="margin-right: 500px;"
                                data-target="#navbarMobile" aria-controls="navbarMobile"
                                aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarMobile">
                                <div class="navbar-nav">
                                    <a class="nav-item nav-link" href="/">Home</a>
                                    <a class="nav-item nav-link" href="/collection">Collection</a>
                                    <a class="nav-item nav-link" href="/forum">Forum</a>
                                    <a class="nav-item nav-link last" href="/login"><img
                                            src="/images/shop/login.png" width=26px height=26px></a>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="limiter">
                <div class="container-login100">
                    <div class="wrap-login100">
                        <div class="login100-pic js-tilt" data-tilt>
                            <img src="/images/shop/logo-black.png" alt="Image">
                        </div>
                        <form class="login-form" action="/new-password" method="POST">
                            <span class="login100-form-title">Update Password</span>
                            <div class="wrap-input100 validate-input" data-validate="Password is required">
                                <input class="input100" type="password" name="password" placeholder="New Password"
                                    id="password">
                                <span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <input type="hidden" name="userId" value="<%= userId %>">
                                    <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                                    <i class="fa fa-lock" aria-hidden="true"></i></span>
                            </div>
                            <div class="container-login100-form-btn">
                                <button class="login100-form-btn" type="submit" onclick="alertFunc()"
                                    id="update_btn">Update Password</button>
                                <script>
                                    function alertFunc() {
                                        var alertMessage = 'Password has been reset successfully!';
                                        var pass = document.getElementById('password').value;
                                        if (pass.length < 6) {
                                            event.preventDefault();
                                            alert('Password must be at least 6 characters long!');
                                        } else {
                                            alert('Password has been reset successfully!');
                                        }
                                    }
                                </script>
                            </div>
                            <div class="text-center2">
                                <a class="txt2" href="/login">Return to login page
                                    <i class="fa fa-long-arrow-right m-l-5 " aria-hidden="true "></i></a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script src="../js/jquery.min.js"></script>
        <script src="../js/bootstrap.bundle.min.js"></script>
    </body>

    </html>